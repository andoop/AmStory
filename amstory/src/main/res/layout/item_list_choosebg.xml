<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_listchoose_mr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="5dp"
    android:paddingRight="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_list_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="6dp"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:id="@+id/rl_listchoose_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/iv_mc_icon"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:src="@drawable/niuniu"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                />
            <ImageView
                android:id="@+id/iv_mc_play"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_list_choose_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_list_choose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:textSize="12sp"
        android:text="音效"/>

    </RelativeLayout>
