<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="andoop.android.amstory.InteractActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <ImageView
            android:id="@+id/interact_back"
            android:src="@drawable/ic_back"
            android:paddingLeft="@dimen/dimens_10dp"
            android:paddingRight="@dimen/dimens_10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <RadioGroup
            android:id="@+id/interact_radiogroup"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <RadioButton
                android:id="@+id/interact_attention"
                android:text="关注"
                android:paddingLeft="@dimen/dimens_40dp"
                android:paddingRight="@dimen/dimens_40dp"
                android:button="@null"
                android:textColor="@drawable/text_color_selector"
                android:textSize="@dimen/dimens_18sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <RadioButton
                android:id="@+id/interact_fans"
                android:text="粉丝"
                android:paddingLeft="@dimen/dimens_40dp"
                android:paddingRight="@dimen/dimens_40dp"
                android:button="@null"
                android:textColor="@drawable/text_color_selector"
                android:textSize="@dimen/dimens_18sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RadioGroup>

        <ImageView
            android:id="@+id/interact_add"
            android:layout_alignParentRight="true"
            android:src="@drawable/adduser"
            android:padding="@dimen/dimens_10dp"
            android:layout_width="@dimen/dimens_40dp"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/interact_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
