<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimens_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itme_interact_icon"
            android:layout_width="@dimen/dimens_60dp"
            android:layout_height="@dimen/dimens_60dp"
            android:layout_marginBottom="@dimen/dimens_20dp"
            android:layout_marginLeft="@dimen/dimens_15dp"
            android:layout_marginTop="@dimen/dimens_20dp"
             />

        <LinearLayout
            android:layout_width="@dimen/dimens_15dp"
            android:layout_height="@dimen/dimens_15dp"
            android:layout_alignBottom="@+id/itme_interact_icon"
            android:layout_alignEnd="@+id/itme_interact_icon"
            android:background="@drawable/itme_tag_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1.5dp"
                android:src="@drawable/darennv" />
        </LinearLayout>

        <TextView
            android:id="@+id/itme_interact_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/itme_interact_icon"
            android:layout_marginBottom="@dimen/dimens_10dp"
            android:layout_marginLeft="@dimen/dimens_20dp"
            android:layout_toEndOf="@+id/itme_interact_icon"
            android:text="用户名"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/itme_interact_user_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/itme_interact_user_name"
            android:layout_below="@id/itme_interact_user_name"
            android:text="10关注"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/itme_interact_user_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/itme_interact_user_guanzhu"
            android:layout_toEndOf="@+id/itme_interact_user_name"
            android:text="10粉丝"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/itme_interact_user_guanzhu"
            android:layout_below="@+id/itme_interact_user_guanzhu"
            android:layout_marginBottom="@dimen/dimens_15dp"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/babyboy" />

            <View
                android:layout_width="@dimen/dimens_1dp"
                android:layout_height="@dimen/dimens_10dp"
                android:layout_marginLeft="@dimen/dimens_5dp"
                android:layout_marginRight="@dimen/dimens_5dp"
                android:background="@color/timecode_shadow2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝宝年龄"
                android:textSize="10sp" />

            <View
                android:layout_width="@dimen/dimens_1dp"
                android:layout_height="@dimen/dimens_10dp"
                android:layout_marginLeft="@dimen/dimens_5dp"
                android:layout_marginRight="@dimen/dimens_5dp"
                android:background="@color/timecode_shadow2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10作品"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/itme_interact_interact"
            android:layout_width="@dimen/dimens_60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimens_15dp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:padding="@dimen/dimens_5dp"
            android:text="互相关注"
            android:textColor="@color/appblue"
            android:textSize="@dimen/dimens_12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>